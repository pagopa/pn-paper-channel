{
  "name": "pn-paper-channel-tenders",
  "version": "1.0.0",
  "description": "",
  "type": "commonjs",
  "outDir": "dist",
  "scripts": {
    "test-build": "npm run-script test && npm run-script coverage && npm run-script sonar && npm run-script build",
    "build-ts": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --outfile=dist/index.js",
    "build": "npm run build-ts && rm -f ./function.zip && zip -r ./function.zip ./dist",
    "test": "nyc --reporter=html --reporter=text mocha './test/**/*.test.ts' --recursive --timeout=3000 --exit",
    "coverage": "nyc report --reporter=lcov",
    "sonar": "node sonarqube-scanner.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.5.0",
    "@types/chai": "^5.0.0",
    "@types/mocha": "latest",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.2",
    "esbuild": "0.23.1",
    "eslint": "^9.9.0",
    "ts-node": "latest",
    "mocha": "latest",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "aws-lambda-mock-context": "latest",
    "aws-sdk-client-mock": "^4.0.0",
    "proxyquire": "^2.1.3",
    "sonarqube-scanner": "^3.5.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.650.0",
    "@aws-sdk/util-dynamodb": "^3.637.0",
    "@middy/core": "^5.5.0",
    "@middy/http-error-handler": "^5.5.0",
    "@middy/http-json-body-parser": "^5.5.0",
    "@middy/http-router": "^5.5.0",
    "@middy/validator": "^5.5.0"
  },
  "mocha": {
    "extension": ["ts"],
    "spec": "test/**/*.test.ts"
  }
}
